<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
                        
	<bean id="eventLoggerConsole" class="com.yet.spring.core.service.logging.ConsoleEventLogger"/>                        
                        
	<bean id="cacheEventLoggerFile"
		class="com.yet.spring.core.service.logging.CacheFileEventLogger"
		destroy-method="destroy" parent="eventLoggerFile">
		<constructor-arg value="2" />
	</bean>

	<bean id="eventLoggerFile"
		class="com.yet.spring.core.service.logging.FileEventLogger"
		init-method="init" abstract="true">
		<constructor-arg value="target/events_log.txt" />
	</bean>
</beans>