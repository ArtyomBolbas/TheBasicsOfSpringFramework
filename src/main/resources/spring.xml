<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean id="app" class="com.yet.spring.core.App">
		<constructor-arg ref="client" />
		<constructor-arg ref="eventLoggerConsole"/>
		<constructor-arg>
			<map>
				<entry key="INFO" value-ref="eventLoggerConsole"/>
				<entry key="ERROR" value-ref="combinedEventLogger"/>
			</map>
		</constructor-arg>
	</bean>

	<bean id="client" class="com.yet.spring.core.model.Client">
		<constructor-arg index="0" value="1" />
		<constructor-arg index="1" value="John Smith"/>
		<property name="greeting" value="Hello there"/>
	</bean>

	<bean id="event" class="com.yet.spring.core.model.Event"
		scope="prototype">
		<constructor-arg>
			<bean class="java.util.Date" />
		</constructor-arg>
		<constructor-arg>
			<bean id="dateFormat" class="java.text.DateFormat"
				factory-method="getDateTimeInstance" />
		</constructor-arg>
	</bean>
	
	<import resource="loggers.xml"/>
</beans>